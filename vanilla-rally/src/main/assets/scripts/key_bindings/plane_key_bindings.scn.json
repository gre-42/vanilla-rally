[
  {
    "declare_macro": "create_plane_key_bindings",
    "content": [
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "car_controller_idle_binding",
        "arguments": {
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX"
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "car_controller_key_binding",
        "arguments": {
          "id": "plane.steer_left",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "steer_left_amount": 1
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "car_controller_key_binding",
        "arguments": {
          "id": "plane.steer_right",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "steer_left_amount": -1
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_idle_binding",
        "arguments": {
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX"
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_key_binding",
        "arguments": {
          "id": "plane.roll_left",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "roll": -5
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_key_binding",
        "arguments": {
          "id": "plane.roll_right",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "roll": 5
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_key_binding",
        "arguments": {
          "id": "plane.pitch_up",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "pitch": 10
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_key_binding",
        "arguments": {
          "id": "plane.pitch_down",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "pitch": -10
        }
      },
      {
        "comment": {
          "call": "abs_key_binding",
          "arguments": {
            "node": "car_node$SUFFIX",
            "key": "LEFT_SHIFT",
            "gamepad_button": "B",
            "force": [0, 20000, 0]
          }
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_key_binding",
        "arguments": {
          "id": "plane.forward",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "turbine_power": "inf"
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_key_binding",
        "arguments": {
          "id": "plane.brake",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "brake": 20
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_key_binding",
        "arguments": {
          "id": "plane.yaw_left",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "yaw": -20
        }
      },
      {
        "required": ["%IF_MANUAL_DRIVE"],
        "call": "plane_controller_key_binding",
        "arguments": {
          "id": "plane.yaw_right",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "node": "car_node$SUFFIX",
          "yaw": 20
        }
      },
      {
        "call": "weapon_cycle_key_binding",
        "arguments": {
          "id": "plane.next_weapon",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "weapon_increment": 1
        }
      },
      {
        "call": "weapon_cycle_key_binding",
        "arguments": {
          "id": "plane.previous_weapon",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "weapon_increment": -1
        }
      },
      {
        "required": ["%IF_HAS_GUN"],
        "call": "gun_key_binding",
        "arguments": {
          "id": "plane.shoot",
          "role": "%role",
          "player": "%PLAYER_NAME"
        }
      },
      {
        "required": ["%IF_HAS_GUN"],
        "exclude": ["%IF_MANUAL_AIM"],
        "call": "player_key_binding",
        "arguments": {
          "id": "plane.select_next_opponent",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "select_next_opponent": true
        }
      },
      {
        "call": "player_key_binding",
        "arguments": {
          "id": "plane.select_next_vehicle",
          "role": "%role",
          "player": "%PLAYER_NAME",
          "select_next_vehicle": true
        }
      }
    ]
  }
]
