{
  "declare_macro": "create_car_cameras_heli",
  "content": [
    {"call": "root_node_instance", "arguments": {"type": "dynamic", "name": "'45_deg_camera'", "position": [0, 2000, 2400], "rotation": [-45, 0, 0]}},
    {"call": "child_node_instance", "arguments": {"type": "dynamic", "parent": "car_node$SUFFIX", "name": "follower_camera", "position": [0, 10, 10]}},
    {"call": "child_node_instance", "arguments": {"type": "dynamic", "parent": "main_gun_node$SUFFIX", "name": "main_gun_camera_node$SUFFIX", "position": [0, 0.5, -2]}},
    {"call": "perspective_camera", "arguments": {"node": "'45_deg_camera'", "y_fov": 30, "near_plane": 1, "far_plane": 10000, "requires_postprocessing": false}},
    {"call": "perspective_camera", "arguments": {"node": "follower_camera", "y_fov": 60, "near_plane": 1, "far_plane": "%FAR_PLANE", "requires_postprocessing": true}},
    {"call": "perspective_camera", "arguments": {"node": "main_gun_camera_node$SUFFIX", "y_fov": 30, "near_plane": 1, "far_plane": "%FAR_PLANE", "requires_postprocessing": true}},
    {"call": "look_at_node", "arguments": {"follower": "'45_deg_camera'", "followed": "car_node$SUFFIX"}},
    {
      "call": "follow_node",
      "arguments": {
        "follower": "follower_camera",
        "followed": "car_node$SUFFIX",
        "distance": 15,
        "node_displacement": [0, 4, 0],
        "look_at_displacement": [0, 4, 0],
        "snappiness": 2,
        "y_adaptivity": 15,
        "y_snappiness": 0.05
      }
    },
    {"call": "set_camera_cycle", "arguments": {"name": "far", "cameras": ["'45_deg_camera'", "light_node0", "light_node1", "dirtmap_node", "bird_node"]}},
    {"call": "set_camera_cycle", "arguments": {"name": "near", "cameras": ["follower_camera", "main_gun_camera_node$SUFFIX"]}},
    {"call": "set_camera", "arguments": {"name": "follower_camera"}},
    {"call": "append_externals_deleter", "arguments": {"player": "%PLAYER_NAME", "node": "'45_deg_camera'"}},
    {"call": "append_externals_deleter", "arguments": {"player": "%PLAYER_NAME", "node": "follower_camera"}},
    {"call": "append_externals_deleter", "arguments": {"player": "%PLAYER_NAME", "node": "main_gun_camera_node$SUFFIX"}},
    {"call": "set_node_hider", "arguments": {"node_to_hide": "car_node$SUFFIX", "camera_node": "main_gun_camera_node$SUFFIX"}}
  ]
}
