[
  {
    "declare_macro": "create_avatar_cameras_persistent",
    "content": [
      {"call": "perspective_camera", "arguments": {"node": "human_head_camera_node$SUFFIX", "y_fov": 60, "near_plane": 0.1, "far_plane": "%FAR_PLANE", "requires_postprocessing": true}},
      {"call": "set_node_hider", "arguments": {"node_to_hide": "human_node$SUFFIX", "camera_node": "human_head_camera_node$SUFFIX"}}
    ]
  },
  {
    "declare_macro": "create_avatar_cameras_pc",
    "content": [
      {"call": "root_node_instance", "arguments": {"dynamics": "moving", "name": "'45_deg_camera'", "position": [0, 2000, 2400], "rotation": [-45, 0, 0]}},
      {"call": "child_node_instance", "arguments": {"type": "dynamic", "parent": "human_node$SUFFIX", "name": "follower_camera", "position": [0, 10, 10]}},
      {"call": "perspective_camera", "arguments": {"node": "'45_deg_camera'", "y_fov": 30, "near_plane": 1, "far_plane": 10000, "requires_postprocessing": false}},
      {"call": "perspective_camera", "arguments": {"node": "follower_camera", "y_fov": 60, "near_plane": 1, "far_plane": "%FAR_PLANE", "requires_postprocessing": true}},
      {"call": "look_at_node", "arguments": {"follower": "'45_deg_camera'", "followed": "human_node$SUFFIX"}},
      {
        "call": "follow_node",
        "arguments": {
          "follower": "follower_camera",
          "followed": "human_node$SUFFIX",
          "distance": 10,
          "node_displacement": [0, 4, 0],
          "look_at_displacement": [0, 4, 0],
          "snappiness": 2,
          "y_adaptivity": 15,
          "y_snappiness": 0.05
        }
      },
      {"call": "set_camera_cycle", "arguments": {"name": "far", "cameras": ["'45_deg_camera'", "light_node0", "light_node1", "dirtmap_node", "bird_node"]}},
      {"call": "set_camera_cycle", "arguments": {"name": "near", "cameras": ["follower_camera", "human_head_camera_node$SUFFIX"]}},
      {"call": "set_camera", "arguments": {"name": "human_head_camera_node$SUFFIX"}},
      {"call": "append_externals_deleter", "arguments": {"player": "%EXTERNALS_PLAYER_NAME", "node": "'45_deg_camera'"}},
      {"call": "append_externals_deleter", "arguments": {"player": "%EXTERNALS_PLAYER_NAME", "node": "follower_camera"}}
    ]
  }
]
