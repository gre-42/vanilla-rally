[
  {
    "declare_macro": "add_facade_texture_with_histogram",
    "content": [
      {
        "call": "add_texture_descriptor",
        "literals": {
          "name": "wall_$NAME",
          "color": "%WALL_COLOR",
          "normal": "%WALL_NORMAL",
          "color_mode": "rgb",
          "histogram": "%HISTOGRAM",
          "anisotropic_filtering_level": 16
        }
      },
      {
        "comment": "Draw a window into the center of a facade texture"
      },
      {
        "call": "add_texture_atlas",
        "literals": {
          "name": "color_$NAME",
          "width": 2048,
          "height": 2048,
          "color_mode": "rgb",
          "images": [
            {
              "texture_pos": [
                0,
                0
              ],
              "texture": "#wall_$NAME"
            },
            {
              "texture_pos": [
                512,
                512
              ],
              "texture": "textures/osm/DE21F2_industryWindow00001_1k.png"
            }
          ]
        }
      },
      {
        "call": "add_texture_atlas",
        "literals": {
          "name": "normal_$NAME",
          "width": 2048,
          "height": 2048,
          "color_mode": "rgb",
          "images": [
            {
              "texture_pos": [0, 0],
              "texture": "%WALL_NORMAL"
            },
            {
              "texture_pos": [512, 512],
              "texture": "textures/osm/DE21F2_industryWindow00001_1k_NormalGL.png"
            }
          ]
        }
      },
      {
        "call": "add_texture_descriptor",
        "literals": {
          "name": "%NAME",
          "color": "#color_$NAME",
          "normal": "#normal_$NAME",
          "color_mode": "rgb",
          "anisotropic_filtering_level": 16
        }
      }
    ]
