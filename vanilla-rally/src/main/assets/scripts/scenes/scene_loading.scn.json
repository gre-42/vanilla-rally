[
  {
    "declare_macro": "_setup_scene_loading",
    "content": [
      {
        "playback": "scene_minimal",
        "arguments": {
          "IF_DIRTMAP": false,
          "IF_SKYBOX": false
        }
      },
      {
        "call": "ui_background",
        "arguments": {
          "z_order": 1,
          "texture": "textures/ui_background.png",
          "left": "min",
          "right": "end",
          "bottom": "min",
          "top": "end",
          "update": "once",
          "delay_load_policy": "no_delay",
          "focus_mask": "always"
        }
      },
      {
        "call": "focused_text",
        "arguments": {
          "ttf_file": "fonts/RobotoMono-Bold.ttf",
          "position": ["nan", "nan"],
          "font_height": "huge",
          "line_distance": "huge",
          "focus_mask": "always",
          "text": "Loading..."
        }
      }
    ]
  },
  {
    "declare_macro": "create_scene_loading",
    "content": [
      {
        "call": "create_scene",
        "arguments": {
          "name": "loading",
          "focus_mask": "loading",
          "submenus": [],
          "fly": false,
          "rotate": false,
          "depth_fog": false,
          "low_pass": false,
          "high_pass": false,
          "with_skybox": false,
          "with_flying_logic": false,
          "clear_mode": "color_and_depth"
        }
      },
      {
        "playback": "_setup_scene_loading",
        "context": "loading"
      }
    ]
  }
]
